{{>header}}
<section id="details-page" class="details">
            <div class="pet-information">
                <h3>Name: {{pet.name}}</h3>
                <p class="type">Type: {{pet.type}}</p>
                <p class="img"><img src="{{pet.imageUrl}}"></p>
                <div class="actions">
                    <!-- Edit/Delete buttons ( Only for creator of this pet )  -->
                    {{#if hasOwnPet}}
                    <a class="button" href="#/edit/{{pet._id}}">Edit</a>
                    <a class="button" href="#/delete/{{pet._id}}">Delete</a>
                    
                    <!-- Bonus -->
                    <!-- Like button ( Only for logged-in users, which is not creators of the current pet ) -->
                    {{else}}
                    {{#if email}}
                    <a class="button" href="#/like/{{pet._id}}">Like</a>
                    {{/if}}
                    {{/if}}
                    <!-- ( for Guests and Users )  -->
                    {{#unless likes.isLiked}}
                    <div class="likes">
						<img class="hearts" src="/images/heart.png">
						<span id="total-likes">Likes: {{likes.count}}</span>
					</div>
                    {{/unless}}
					<!-- Bonus -->
                </div>
            </div>
            <div class="pet-description">
                <h3>Description:</h3>
                <p>{{pet.description}}</p>
            </div>
        </section>

{{>footer}}